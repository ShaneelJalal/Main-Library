class Solution:
    def numIslands(self, grid: List[List[str]]) -> int:
        ROWS,COLS = len(grid), len(grid[0])
        def dfs(r,c):
            if 0  <= r <  ROWS\
            and 0 <= c < COLS\
            and (r,c) not in visited\
            and grid[r][c] == "1":
                visited.add((r,c))
                dfs(r + 1, c)
                dfs(r - 1, c)
                dfs(r, c + 1)
                dfs(r, c - 1)
        visited = set()   
        island_count = 0
        for r in range(ROWS):
            for c in range(ROWS):
                if (r,c) not in visited and grid[r][c] == "1":
                    island_count += 1
                    dfs(r,c)
        return island_count
